	public static int[] greatestUncommonOddDigitInfo(int[] a1)
		{
		
		int[] resultArry=new int[5];
		
		
	       int countDigit1 = 0;
	       int countDigit3 = 0;
	       int countDigit5 = 0;
	       int countDigit7 = 0;
	       int countDigit9 = 0;
	       int digit;
	       int number;
		
		for(int i=0;i<a1.length;i++){
			number=a1[i];
			 if (number < 0 ) 
		            number = -number;
		              
		        do {
		            digit = number % 10;
		            if (digit == 1) 
		                countDigit1++;
		            else if (digit == 3) 
		                countDigit3++;
		            else if (digit == 5)
		                countDigit5++;
		             else if (digit == 7) 
		                countDigit7++;
		            else if (digit == 9)
		                countDigit9++;
		            
		            number /= 10;
		        } while (number != 0);
		}
		
	
	int[] cd = new int [5];
	cd[0]=countDigit1;
	cd[1]=countDigit3;
	cd[2]=countDigit5;
	cd[3]=countDigit7;
	cd[4]=countDigit9;
	int first, second,index1,index2;
	first = second = Integer.MAX_VALUE;
	for(int j=0;j<cd.length;j++){
		if(cd[j]<first){
			second=first;
			first=cd[j];
			index1=j;
			index2=index1;
			}
		else if(cd[j]<second && cd[j]!=first)
			second=cd[j];
		   index2=j;
	}
	
	for (int z:cd)
		System.out.print(z+" ");
	System.out.println();
	System.out.println(min1+" @ "+index1+min2+" @ "+index2);
	
	
	
	
		
		
		return resultArry;
	}

